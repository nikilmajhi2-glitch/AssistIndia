<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rupeedesk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application android:label="AssistIndia">
        <!-- Workmanager components -->
        <receiver android:name="com.ryanheise.workmanager.receiver.WorkManagerBroadcastReceiver" android:exported="false" />
        <service android:name="com.ryanheise.workmanager.WorkManagerTaskService" android:permission="android.permission.BIND_JOB_SERVICE" android:exported="true" />
        <receiver android:enabled="true" android:exported="true" android:name="com.ryanheise.workmanager.receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
